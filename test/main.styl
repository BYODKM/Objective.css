@charset "utf-8"
@import "kouto-swiss"

@font-face
  font-family "Open Sans"
  font-style normal
  font-weight 600
  src local("Open Sans Semibold"),
    local("OpenSans-Semibold"),
    url("//themes.googleusercontent.com/static/fonts/opensans/v6/MTP_ySUJH_bn48VBG8sNSqRDOzjiPcYnFooOUGCOsRk.woff") format("woff")

.Page
  position relative
  margin 0
  color #222
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  line-height 1.25
  -webkit-text-size-adjust 100%
  -ms-text-size-adjust 100%
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

  &.param--expand

    .Page__header-title
      max-width none

  & &__header
    overflow hidden
    background-color #222

  & &__header-title
    margin 0.5em auto
    padding-left 1rem
    color white
    font-family "Open Sans", sans-serif
    font-size rem(30px)

  & &__expand-button
    position absolute
    top 1.2rem
    right 1rem
    border-color white
    color white
    background none

    @media only screen and (max-width: 668px)
      display none

  & &__footer
    padding 1em 0
    height 1.25em
    font-size rem(14px)

  & &__footer-link
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    padding 1em 0
    color white
    text-align center
    text-decoration none
    text-indent -1px
    letter-spacing 1px
    background-color #222

    &:hover
      text-decoration underline

.Test
  margin 0 auto
  padding 0 0.5rem
  max-width 640px

  &.param--expand
    max-width none

  & &__name
    margin 2rem 0 0
    color silver
    font-family "Open Sans", sans-serif
    font-size rem(30px)

  & &__anchor
    position relative
    display block
    color inherit
    text-decoration none

    &:before
      content '#'
      position absolute
      top 0
      left -0.8em
      display inline-block
      width 0.8em
      color transparent

      @media only screen and (max-width: 640px)
        display none

    &:hover:before
      color currentColor

  & &__pre
    position relative
    margin 1rem 0 0
    font-family monospace, monospace
    font-size 1em

  & &__code
    display block
    padding 1rem 0 1rem 1rem
    border-radius 4px 4px 0 0
    overflow-x auto
    overflow-y hidden
    color white
    font-family Monaco, Menlo, "Lucida Console", monospace
    font-size rem(13px)
    line-height 1.5
    background-color #222

    &:before
      content "Jade"
      position absolute
      top 0.5rem
      right 0.5rem
      display inline-block
      padding 0 0.5em
      border-radius 4px
      background-color rgba(white, 0.25)

    .comment
    .prolog
    .doctype
    .cdata
      color slategray

    .punctuation
      color #f8f8f2

    .namespace
      opacity 0.7

    .property
    .tag
    .constant
    .symbol
    .deleted
      color hsl(325, 80%, 66%)

    .boolean
    .number
      color #ae81ff

    .selector
    .attr-name
    .string
    .char
    .builtin
    .inserted
      color #a6e22e

    .operator
    .entity
    .url
    .variable
      color #f8f8f2

    .atrule
    .attr-value
    .function
      color #e6db74

    .keyword
      color #66d9ef

    .regex
    .important
      color #fd971f

    .important
    .bold
      font-weight bold

    .italic
      font-style italic

    .entity
      cursor help

  & &__jade
    margin 0 0 2rem
    padding 1rem
    border 1px solid #222
    border-radius 0 0 4px 4px

    p:first-of-type
      margin-top 0

    p:last-of-type
      margin-bottom 0
